//	            }
//				if(_type){
//					setupWebViewJavascriptBridge(function(bridge) {
//						mui('#update').on('tap', '.fn-update', function(){
//							actionUpdate(bridge);
//						});
//						mui('.logout-cell').on('tap', 'a', function(){
