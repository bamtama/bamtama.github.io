					uname = mui('input[name="username"]')[0].value === undefined ? '' : mui('input[name="username"]')[0].value,
					pwd = mui('input[name="password"]')[0].value === undefined ? '' : mui('input[name="password"]')[0].value;
				}else{
					flag = 1;
				}
				

