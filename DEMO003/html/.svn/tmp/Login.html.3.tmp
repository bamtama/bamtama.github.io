			mui.init()
			mui('.ju-login-wrap')
				.on('tap', '.pwd-visible', togglePwdVisible)
				.on('tap', '.pwd-clear', clearPwd)
				.on('input', '.input-pwd', showPwdClear)
				.on('submit', 'form', function(e) {
